{
  "name": "ci-bot",
  "version": "1.0.0",
  "description": "Probot that reports status of a CI build for its associated Pull Request",
  "author": "Ryan Cheung <cheung31@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com//ci-bot.git",
  "homepage": "https://github.com//ci-bot",
  "bugs": "https://github.com//ci-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "probot": "^9.0.1",
    "request-promise-native": "^1.0.8",
    "strip-ansi": "^6.0.0"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "jest": "^24.0.0",
    "lint-staged": "^9.4.2",
    "nock": "^11.6.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
